{
  "language": "en",
  "isPipeline": false,
  "isAutoCommit": false,
  "isAutoPush": false,
  "conventions": [
    { "prefix": "feat", "description": "Used when a new feature is added." },
    { "prefix": "fix", "description": "Used when fixing a bug." },
    { "prefix": "refactor", "description": "Used for changes that modify the code structure without changing its behavior." },
    { "prefix": "chore", "description": "Used for changes to dependencies, configuration or removing comments." },
    { "prefix": "docs", "description": "Used for documentation updates." },
    { "prefix": "test", "description": "Used for adding or updating tests." }
  ],
  "models": [
    {
      "type": "openai",
      "model": "gpt-4o-mini",
      "apiKey": "OPEN_AI_API_KEY"
    },
    {
      "type": "gemini",
      "apiKey": "GEMINI_API_KEY",
      "model": "gemini-2.5-flash"
    }
  ],
  "agentConfig": {
    "temperature": 0.2,
    "maxTokens": 200
  },
  "pipelineConfig": {
    "modelIndex": 0,
    "diffMode": "all"
  }
}
